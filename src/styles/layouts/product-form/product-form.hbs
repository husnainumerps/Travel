<div class="rlr-section rlr-section__content--lg-top rlr-product-form">
    <div class="container">
        <div class="row">
            <aside class="col-xl-3">
                {{> '@progress'}}
            </aside>
            <div class="col-xl-6 offset-xl-1">
                <form id="jsForm">
                    {{> '@product-form--step-1'}}
                    {{> '@product-form--step-2'}}
                    {{> '@product-form--step-3'}}
                    {{> '@product-form--step-4'}}
                    {{> '@product-form--step-5'}}
                    {{> '@product-form--step-6'}}
                    {{> '@product-form--step-7'}}
                    {{> '@product-form--step-8'}}
                    {{> '@product-form--step-9'}}
                    {{> '@product-form--step-11'}}
                    {{> '@product-form--step-12'}}
                    {{> '@product-form--step-last'}}
                </form>
                <hr>
                <div>
                    {{> '@pagination' buttonState="disabled" buttonLeftLabel="Back" buttonRightLabel="Next"}}
                </div>
            </div>
            <aside class="col-xl-2 d-none d-xl-block">
            </aside>
        </div>
    </div>
</div>